{
  "name": "shivdhaam-backend",
  "version": "1.0.0",
  "description": "Backend API for Shiv Dhaam Foundation donation platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "// === NEW DATABASE INSTALLER SYSTEM ===": "",
    "db:install": "node scripts/db-installer.js",
    "db:setup": "node scripts/db-setup.js",
    "db:setup:dev": "node scripts/db-setup.js development --verbose",
    "db:setup:test": "node scripts/db-setup.js test --verbose",
    "db:setup:staging": "node scripts/db-setup.js staging",
    "db:setup:prod": "node scripts/db-setup.js production",
    "db:reset": "node scripts/db-reset.js",
    "db:reset:dev": "node scripts/db-reset.js development --backup",
    "db:reset:test": "node scripts/db-reset.js test --nuclear",
    "db:reset:hard": "node scripts/db-reset.js development --nuclear --backup",
    "db:status": "node scripts/db-status.js",
    "db:status:dev": "node scripts/db-status.js development --detailed",
    "db:status:all": "node scripts/db-status.js development --detailed --verbose",
    "db:seed": "node scripts/db-seed.js development --all",
    "db:seed:fresh": "node scripts/db-seed.js development --all --fresh",
    "db:seed:force": "node scripts/db-seed.js development --all --force",
    "db:seed:admin": "node scripts/db-seed.js development --specific=001_create_admin_user.js --force",
    "db:seed:undo": "node scripts/db-seed.js development --all --undo",
    "db:validate": "node -e 'const EnvironmentValidator = require(\"./scripts/EnvironmentValidator\"); new EnvironmentValidator(process.env.NODE_ENV || \"development\").validate().then(r => process.exit(r.score >= 70 ? 0 : 1)).catch(e => {console.error(e.message); process.exit(1)})'",
    "db:validate:dev": "node -e 'const EnvironmentValidator = require(\"./scripts/EnvironmentValidator\"); new EnvironmentValidator(\"development\").validate().then(r => process.exit(r.score >= 70 ? 0 : 1)).catch(e => {console.error(e.message); process.exit(1)})'",
    "db:validate:prod": "node -e 'const EnvironmentValidator = require(\"./scripts/EnvironmentValidator\"); new EnvironmentValidator(\"production\").validate().then(r => process.exit(r.score >= 70 ? 0 : 1)).catch(e => {console.error(e.message); process.exit(1)})'",
    "db:diagnose": "node scripts/database-diagnostic.js",
    "db:diagnose:dev": "node scripts/database-diagnostic.js development --verbose",
    "db:diagnose:staging": "node scripts/database-diagnostic.js staging --verbose",
    "db:diagnose:prod": "node scripts/database-diagnostic.js production --verbose",
    "db:diagnose:config": "node scripts/database-diagnostic.js --config-only",
    "db:diagnose:network": "node scripts/database-diagnostic.js --network-only",
    "// === LEGACY COMMANDS (DEPRECATED) ===": "",
    "setup-db": "echo 'DEPRECATED: Use npm run db:setup instead' && node scripts/setup-database.js",
    "setup-db:dev": "echo 'DEPRECATED: Use npm run db:setup:dev instead' && node scripts/setup-database.js development",
    "setup-db:staging": "echo 'DEPRECATED: Use npm run db:setup:staging instead' && node scripts/setup-database.js staging",
    "setup-db:prod": "echo 'DEPRECATED: Use npm run db:setup:prod instead' && node scripts/setup-database.js production",
    "validate-db": "echo 'DEPRECATED: Use npm run db:status instead' && node scripts/validate-database.js",
    "// === MIGRATION RUNNER ===": "",
    "migrate:run": "node run-migrations.js",
    "migrate:run:force": "node run-migrations.js --force",
    "migrate:run:prod": "node run-migrations.js --env=production",
    "migrate:run:staging": "node run-migrations.js --env=staging",
    "migrate:run:test": "node run-migrations.js --env=test",
    "// === SEQUELIZE CLI COMMANDS ===": "",
    "migrate": "npx sequelize-cli db:migrate --config src/config/database.js",
    "migrate:undo": "npx sequelize-cli db:migrate:undo --config src/config/database.js",
    "migrate:status": "npx sequelize-cli db:migrate:status --config src/config/database.js",
    "seed": "npx sequelize-cli db:seed:all --config src/config/database.js",
    "seed:undo": "npx sequelize-cli db:seed:undo:all --config src/config/database.js",
    "// === TESTING ===": "",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:db": "npm run db:setup:test && npm test",
    "// === DEVELOPMENT ===": "",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "keywords": [
    "donation",
    "temple",
    "foundation",
    "spiritual",
    "campaign",
    "fundraising",
    "nodejs",
    "postgresql",
    "sequelize"
  ],
  "author": "Shiv Dhaam Foundation",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.1",
    "helmet": "^7.1.0",
    "joi": "^18.0.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "razorpay": "^2.9.2",
    "redis": "^5.8.0",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/migrations/**",
      "!src/seeders/**",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shivdhaam-foundation/backend.git"
  },
  "bugs": {
    "url": "https://github.com/shivdhaam-foundation/backend/issues"
  },
  "homepage": "https://www.shivdhaam.org"
}
